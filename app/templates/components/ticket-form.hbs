<div>
  <label>Number</label>
  {{input value=ticket.number}}
</div>

<div>
  <label>User</label>
  <select onchange={{action 'setUser' value='target.value'}}>
    <option value=''>Select a user</option>
    {{#each allUsers as |user|}}
      <option value={{user.id}} selected={{eq user.id ticket.user.id}}>{{user.name}}</option>
    {{/each}}
  </select>
  or
  {{input value=userName placeholder='Enter a name'}}
</div>

<div>
  <label>Price</label>
  {{input value=ticket.price}}
</div>

<div class="">
  <label for="">Create bidder automatically?</label>
  {{input type='checkbox' checked=model.createBidderAutomatically}}
</div>

<button {{action 'save'}} disabled={{not ticket.isValid}}>
  Save
</button>
