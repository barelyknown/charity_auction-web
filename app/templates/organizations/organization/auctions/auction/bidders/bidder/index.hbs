<dl>
  <dt>Number</dt>
  <dd>{{model.number}}</dd>
</dl>

<h5>Winning Bids</h5>
{{winning-bids-table winningBids=model.winningBids}}

{{link-to 'New Payment for Remaining Balance' 'organizations.organization.auctions.auction.payments.new' (query-params bidderId=model.id amount=model.totalBalance)}}
<h5>Payments</h5>
<table>
  <thead>
    <tr>
      <th>
        Payment ID
      </th>
      <th>
        Amount
      </th>
      <th>
        Unapplied
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each model.payments as |payment|}}
      <tr>
        <td>
          {{#link-to 'organizations.organization.auctions.auction.payments.payment' payment}}
            {{payment.id}}
          {{/link-to}}
        </td>
        <td class="currency">
          {{payment.amount}}
        </td>
        <td>
          {{payment.unappliedAmount}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
